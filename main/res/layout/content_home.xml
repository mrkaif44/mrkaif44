<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_gravity="top"
        android:padding="10dp">

        <!-- Container for Images -->
        <LinearLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <!-- First Image -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:src="@drawable/img_7"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                >

            </ImageView>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:src="@drawable/img_6"
                android:scaleType="centerCrop"
                android:layout_margin="5dp" />

            <!-- Third Image -->
            <ImageView
                android:id="@+id/image3"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:src="@drawable/img_6"
                android:scaleType="centerCrop"
                android:layout_margin="5dp" />



        </LinearLayout>
    </HorizontalScrollView>
    <!-- Box for Creating Pass -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="#E3F2FD"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Check Syllabus"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>

        <!-- Box for Creating Identity -->
        <RelativeLayout

            android:layout_width="0dp"
            android:id="@+id/b2"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_1"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="All Books"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>

        <!-- Additional Box for Feature 1 -->
        <RelativeLayout

            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_2"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="All Guaids"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_3"
                android:layout_marginLeft="41dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Question Peapers"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_4"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="twintyones"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_5"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="MCQ Tests"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_5"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Extra Study"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/img_5"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Math question"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"></TextView>
        </RelativeLayout>
    </GridLayout>

    <fragment
        android:id="@+id/nav_host_fragment_content_home"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />
</LinearLayout>
